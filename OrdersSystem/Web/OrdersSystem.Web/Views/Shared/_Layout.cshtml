<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="System for orders tracking" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Orders", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    @if (User.IsInRole("Worker") || User.IsInRole("Admin") || User.IsInRole("Boss"))
                    {
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">Orders<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Incoming Orders", "Index", "InOrders", new { area = "" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Outgoing Orders", "Index", "OutOrders", new { area = "" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Repairs", "Index", "Repairs", new { area = "" }, null)</li>
                                <li class="divider"></li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">Admin<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Users", "Index", "Users", new { area = "Admin" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Devices", "Index", "Devices", new { area = "Admin" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Categories", "Index", "Categories", new { area = "Admin" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Suppliers", "Index", "Suppliers", new { area = "Admin" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Customers", "Index", "Customers", new { area = "Admin" }, null)</li>
                                <li class="divider"></li>
                            </ul>
                        </li>                        
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Orders ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/gridmvc")
    @RenderSection("scripts", required: false)
</body>
</html>
